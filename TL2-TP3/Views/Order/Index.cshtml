
@{
    ViewData["Title"] = "Orders";
}
@model List<TL2_TP3.Models.Order>

<h1 class="text-center">Order's List</h1>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <td>Number</td>
            <td>Observation</td>
            <td>State</td>
            <td>Client</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@item.Number</b>
                </td>
                <td>@item.Observation</td>
                <td>@item.State</td>
                <td>@item.Client.Name</td>
                <td class="d-flex justify-content-evenly">
                    <a class="btn btn-warning" asp-route-id="@item.Number" asp-action="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a class="btn btn-danger" asp-route-id="@item.Number" asp-action="Delete" onclick="return confirm('Are you sure you want delete this item?')">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>