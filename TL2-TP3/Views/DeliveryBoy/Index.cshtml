@{
    ViewData["Title"] = "Our Delivery Boys";
}
@model List<TL2_TP3.Models.DeliveryBoy>
<h1>Delivery Boys List</h1>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <td>LastName</td>
            <td>Name</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Ordeers</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><b>@item.Id</b></td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Orders.Count</td>
                <td>
                    <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Edit">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete" onclick="return confirm('Are you sure you want delete this item?')">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="ml-auto d-flex justify-content-end">
    <a class="ml-auto" asp-action="Create"><i class="bi bi-plus-square-fill display-4"></i></a>
</div>